/* component/mvCard/mvCard.wxss */
.flex_auto {
  display: flex;
  align-items: center;
}
.item {
  padding: 10px;
  background-color: #fff;
  color: #787878;
  border-top: 1px solid #eaeaea;
  overflow: auto;
  position: relative;
}
.item_left{
  float: left;
}
.item image {
  display: block;
  width: 80px;
  height: 95px;
}
.item_middle {
  width: 60%;
  padding-left: 10px;
  padding-top: 5px;
  overflow: hidden;
}
.item_middle .title {
  display: inline-block;
  font-size: 16px;
  color: #000;
  font-weight: bold;
  max-width: 140px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
